<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id ="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/account_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/img_account"/>

        <TextView
            android:id="@+id/account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="firstnamelastname@mail.ca"
            android:layout_below="@+id/account_icon"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name Last Name"
            android:layout_below="@+id/account_email"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/button_classroom"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Classroom"
            android:layout_below="@+id/account_name"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/button_restrictions"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Restrictions"
            android:layout_below="@+id/button_classroom"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/button_feedback"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Feedback"
            android:layout_below="@+id/button_restrictions"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/button_surveys"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Surveys"
            android:layout_below="@+id/button_feedback"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/button_tutoring"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tutoring"
            android:layout_below="@+id/button_surveys"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>